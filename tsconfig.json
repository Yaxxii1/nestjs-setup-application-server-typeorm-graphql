{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,

    "noLib": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "@auth": ["src/auth"],
      "@common": ["src/common"],
      "@config": ["src/config"],
      "@environments": ["src/environments"],
      "@generator": ["src/generator/graphql.schema"],
      "@models": ["src/models"],
      "@shared": ["src/shared"],
      "@utils": ["src/utils"],
      "@validations": ["src/validations"]
    }
  },
  "include": ["src/**/*.ts", "src/services/reviews/index.js", "test"],
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "coverage",
    "document",
    "dist",
    "backup",
    "**/*.spec.ts"
  ]
}
